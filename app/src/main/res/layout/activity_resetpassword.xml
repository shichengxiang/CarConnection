<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:fitsSystemWindows="true"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp">

        <ImageView
            android:id="@+id/ivClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_close_fork" />
        <TextView
            android:id="@+id/tvRoleTip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="重置密码"
            android:layout_marginTop="38dp"
            android:textColor="#FF333333"
            android:textStyle="bold"
            android:textSize="22dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未设置过登录密码的用户需在个人中心设置"
            android:textColor="#FFB0B0B0"
            android:layout_marginTop="12dp"
            android:textSize="12dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:id="@+id/etPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入手机号"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:background="@null"
                android:inputType="phone"
                android:textColorHint="#FFD7D7D7"
                android:layout_toLeftOf="@id/tvGetCode"
                android:textSize="14dp"/>
            <TextView
                android:id="@+id/tvGetCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获取验证码"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textColor="#FFAEAEAE"
                android:textSize="12dp"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/etInputSms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入验证码"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:background="@null"
                android:textColorHint="#FFD7D7D7"
                android:textSize="14dp"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/etInputPwd1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请设置新密码"
                android:paddingTop="20dp"
                android:inputType="textPassword"
                android:paddingBottom="20dp"
                android:background="@null"
                android:textColorHint="#FFD7D7D7"
                android:textSize="14dp"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/etInputPwd2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请再次输入新密码"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:background="@null"
                android:inputType="textPassword"
                android:textColorHint="#FFD7D7D7"
                android:textSize="14dp"/>

        </RelativeLayout>
        <Button
            android:id="@+id/btnReset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_0ed4d4_radius22"
            android:layout_marginTop="40dp"
            android:text="重置"
            android:textColor="@color/white"
            android:textSize="16dp"/>
    </LinearLayout>



</RelativeLayout>
