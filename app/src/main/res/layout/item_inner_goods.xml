<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="7dp"
        android:paddingTop="13dp"
        android:paddingRight="7dp"
        android:paddingBottom="13dp">

        <RelativeLayout
            android:id="@+id/rlGoOrderDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivGoodsImage"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:src="@mipmap/img_default_image" />

            <TextView
                android:id="@+id/tvGoodsName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@id/tvGoodsAmount"
                android:layout_toRightOf="@id/ivGoodsImage"
                tools:text="小刀 一多(ieduo)电动车3C国标60V龟王电摩成人电瓶..."
                android:textColor="@color/black_2"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tvGoodsAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                tools:text="￥123.00"
                android:textStyle="bold"
                android:textColor="#FF242323"
                android:textSize="12dp" />
            <TextView
                android:id="@+id/tvGoodsNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvGoodsName"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@id/ivGoodsImage"
                android:text="购买数量：1件"
                android:textColor="#999999"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/tvReturnTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/ivGoodsImage"
                android:layout_alignParentRight="true"
                android:background="#FFFFEED0"
                android:paddingLeft="8dp"
                android:paddingTop="4dp"
                android:paddingRight="8dp"
                android:paddingBottom="4dp"
                android:text="退款中"
                android:textColor="#FFFF8E15"
                android:textSize="11dp"
                android:visibility="gone" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tvReturnAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:layout_marginBottom="10dp"
            android:background="#FFF6F6F6"
            android:paddingLeft="40dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="退款成功&#12288;&#12288;￥"
            android:textColor="#FF686666"
            android:textSize="11dp"
            android:visibility="gone" />

    </LinearLayout>
</FrameLayout>
