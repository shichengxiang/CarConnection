<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#88000000">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_white_bottom_radius10">
        <RelativeLayout
            android:id="@+id/rlCom0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvCom0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="综合"
                android:layout_marginLeft="5dp"
                android:padding="10dp"
                android:textColor="@color/selector_icon_color"
                android:textSize="12dp"/>
            <ImageView
                android:id="@+id/ivCom0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_check_green"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rlCom1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvCom1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="价格升序"
                android:padding="10dp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/selector_icon_color"
                android:textSize="12dp"/>
            <ImageView
                android:id="@+id/ivCom1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_check_green"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:visibility="gone"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rlCom2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvCom2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="价格降序"
                android:padding="10dp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/selector_icon_color"
                android:textSize="12dp"/>
            <ImageView
                android:id="@+id/ivCom2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_check_green"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:visibility="gone"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:id="@+id/vBottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>